#!/usr/bin/env bash

#https://github.com/huggingface/transformers/tree/master/examples/pytorch/language-modeling

python train_clm.py \
    --model_name_or_path HuggingFaceTB/SmolLM2-360M\
    --train_file data/dataset_train.txt \
    --validation_file data/dataset_validation.txt \
    --do_train \
    --do_eval \
    --no_cuda \
    --preprocessing_num_workers 12 \
    --dataloader_num_workers 12 \
    --use_fast_tokenizer \
    --output_dir .model \
    --per_device_eval_batch_size 10 \
    --per_device_train_batch_size 30 \
    --max_train_samples 50 \
    --max_eval_samples 10 \
    --num_train_epochs 10 \
    --block_size 256 \
    --save_steps 50 \
    --eval_steps 50 \
    --metric_for_best_model perplexity \
    --load_best_model_at_end \
    --eval_strategy steps
